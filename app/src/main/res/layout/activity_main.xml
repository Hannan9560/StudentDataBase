<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.brishty.studentdatabase.MainActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add New Student"
            android:background="#000000"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="#faf6f6"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/namely"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/nameTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name: "
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/nameEV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#bdd4b4"
            android:textSize="25sp"
            android:hint="Enter Name"
            android:layout_weight="2"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/idly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/namely"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/idTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="Id: "
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/idEV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#bdd4b4"
            android:textSize="25sp"
            android:hint="Enter Id"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/adressly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idly"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/addressTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="Adress: "
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/adressEV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#bdd4b4"
            android:textSize="25sp"
            android:layout_weight="2"
            android:hint="Enter Adress"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/departmently"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adressly"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/departmentTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Department: "
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/departmentEV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#bdd4b4"
            android:layout_weight="2"
            android:textSize="25sp"
            android:hint="Enter Department"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/btnly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/departmently"
        android:layout_marginTop="10dp"
        >
        <Button
            android:id="@+id/addStudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD STUDENT"
            android:layout_gravity="center"
            android:background="#84efb6"
            android:textSize="25sp"
            android:textColor="#000000"
            />
    </LinearLayout>

</RelativeLayout>
